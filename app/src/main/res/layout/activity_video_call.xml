<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.hyphenate.media.EMOppositeSurfaceView
        android:id="@+id/ml_surface_opposite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.hyphenate.media.EMLocalSurfaceView
        android:id="@+id/ml_surface_local"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/ml_text_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ml_btn_mute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="静音"/>

            <Button
                android:id="@+id/ml_btn_change_camera"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="切换摄像头"/>

            <Button
                android:id="@+id/ml_btn_speaker"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="扬声器"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ml_btn_answer_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="接听"/>


            <Button
                android:id="@+id/ml_btn_reject_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="拒绝"/>

            <Button
                android:id="@+id/ml_btn_end_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="挂断"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>